@using VendorTracker.Models;

<!DOCTYPE html>
<html lang="en-us">
  <head>
    <title>VendorTracker</title>
  </head>
  <body>
    <h3>Orders for @Model["vendor"].Name</h3>
    <ol>
      @foreach(Order order in @Model["orders"])
      {
        <li><a href="/vendors/@Model["vendor"].Id/orders/@order.Id">@order.Title</a></li>
      }
    </ol>
    <div><a href="/vendors/@Model["vendor"].Id/orders/new">Add new order</a></div>
  </body>
</html>